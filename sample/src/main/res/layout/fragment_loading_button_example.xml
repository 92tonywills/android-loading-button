<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingButtonExampleFragment">

    <com.github.tonywills.loadingbutton.LoadingButton
        android:id="@+id/loading_button"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        app:buttonBackgroundTint="@color/belize_hole"
        app:loadingPosition="right"
        app:buttonTextDefault="Go"
        app:buttonTextLoading="Loading"
        style="@style/Widget.AppCompat.Button.Colored" />
        <!--android:backgroundTint="@color/belize_hole"-->

</RelativeLayout>
